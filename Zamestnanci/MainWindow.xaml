<Window
    x:Class="Zamestnanci.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Zamestnanci"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Seznam Zaměstnanců"
    Width="600"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="5*" />
                <RowDefinition Height="3.5*" />
                <RowDefinition Height="1.5*" />
            </Grid.RowDefinitions>

            <ListView
                x:Name="ZemestnanciList"
                Height="150"
                Margin="5,20,5,0"
                VerticalAlignment="Top"
                d:ItemsSource="{d:SampleData ItemCount=5}"
                BorderBrush="Black"
                BorderThickness="0.5">

                <ListView.View>
                    <GridView>
                        <GridViewColumn
                            Width="30"
                            DisplayMemberBinding="{Binding Id}"
                            Header="Id" />
                        <GridViewColumn
                            Width="Auto"
                            DisplayMemberBinding="{Binding Prijmeni}"
                            Header="Příjmení" />
                        <GridViewColumn
                            Width="Auto"
                            DisplayMemberBinding="{Binding Jmeno}"
                            Header="Jméno" />
                        <GridViewColumn
                            Width="Auto"
                            DisplayMemberBinding="{Binding Telefon}"
                            Header="Telefon" />
                        <GridViewColumn
                            Width="Auto"
                            DisplayMemberBinding="{Binding Email}"
                            Header="Email" />


                    </GridView>
                </ListView.View>
            </ListView>
            <Grid
                x:Name="EditGrid"
                Grid.Row="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Center">
                <Label
                    Margin="3,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Příjmení" />
                <Label
                    Margin="3,26,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Jméno" />
                <Label
                    Margin="3,60,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Telefon" />
                <Label
                    Margin="3,90,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Email" />
                <TextBox
                    Name="tbPrijmeni"
                    Width="150"
                    Height="25"
                    Margin="70,0,0,126"
                    HorizontalAlignment="Left"
                    RenderTransformOrigin="0.512,-0.562"
                    Text="{Binding ElementName=ZemestnanciList, Path=SelectedItem.Prijmeni, Mode=OneWay}" />
                <TextBox
                    Name="tbJmeno"
                    Width="150"
                    Height="25"
                    Margin="70,31,0,95"
                    HorizontalAlignment="Left"
                    Text="{Binding ElementName=ZemestnanciList, Path=SelectedItem.Jmeno, Mode=OneWay}" />
                <TextBox
                    Name="tbTelefon"
                    Width="150"
                    Height="25"
                    Margin="70,61,0,65"
                    HorizontalAlignment="Left"
                    Text="{Binding ElementName=ZemestnanciList, Path=SelectedItem.Telefon, Mode=OneWay}" />
                <TextBox
                    Name="tbEmail"
                    Width="150"
                    Height="25"
                    Margin="70,91,0,35"
                    HorizontalAlignment="Left"
                    Text="{Binding ElementName=ZemestnanciList, Path=SelectedItem.Email, Mode=OneWay}" />
            </Grid>
            <StackPanel
                Grid.Row="2"
                HorizontalAlignment="Left"
                Orientation="Horizontal">

                <Button
                    Width="85"
                    Height="30"
                    Margin="10"
                    Click="ButtonUlozit_Click"
                    Content="Ulož záznam" />
                <Button
                    Width="85"
                    Height="30"
                    Margin="10"
                    Click="ButtonOpravit_Click"
                    Content="Oprav záznam" />


                <Button
                    Width="85"
                    Height="30"
                    Margin="10"
                    Click="ButtonZobrazit_Click"
                    Content="Zobraz seznam" />

            </StackPanel>
        </Grid>
    </Grid>
</Window>
